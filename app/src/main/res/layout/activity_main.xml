<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/explicito1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:backgroundTint="#414141"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/wave1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/explicito2"
        />
    <Button
        android:id="@+id/explicito2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textColor="@color/white"
        android:backgroundTint="#414141"
        app:layout_constraintTop_toBottomOf="@id/explicito1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/explicito3"
        />
    <Button
        android:id="@+id/explicito3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K"
        android:textColor="@color/white"
        android:backgroundTint="#414141"
        app:layout_constraintTop_toBottomOf="@id/explicito2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wave"
        />

    <ImageView
        android:id="@+id/wave"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:src="@drawable/wave__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/wave1"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:rotation="180"
        android:src="@drawable/wave__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
